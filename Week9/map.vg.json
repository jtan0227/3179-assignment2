{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Crush cases per 10000 population in Australia ",
    "width": 800,
    "height": 600,
        "projection": {
      "type": "equirectangular"
    },
      "params": [
    {
      "name": "Year_selection",
      "value": 2021,
      "bind": {"input": "range","min": 2010,"max": 2021, "step": 1, "name": "Year:  "}
    }
    
  ],
  "data": {
            "url": "https://raw.githubusercontent.com/jtan0227/web-visualisation-assignment2/main/Week9/map_idiom.csv"
          },
    
    "transform": [
      {
        "lookup": "state",
        "from": {
          "data": {
      "url": "https://raw.githubusercontent.com/jtan0227/web-visualisation-assignment2/main/Week9/map.topojson",
      "format": {"type": "topojson","feature": "STE_2021_AUST_GDA2020" }
    },
          
          "key": "properties.STE_NAME21"},
         "as":"geo"
      },
        {"filter": "datum.year == Year_selection"},
        

      {"calculate": "(datum.cases/datum.population)*10000000", "as": "Cases per 10000000 population"}
    ],

    "mark": {
      "type": "geoshape"
      },
    "encoding": {
          "shape": {
        "field": "geo",
        "type": "geojson"
      },
      "color": {
          "field": "Cases per 10000000 population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [200, 300, 380,1000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d","#A00000", "#800000"]
          }

      },
      "tooltip": [
        {"field": "properties.STE_NAME21", "type": "nominal", "title": "States"},
        {"field": "Cases per 10000000 population", "type": "quantitative"}
      ]
    }
}