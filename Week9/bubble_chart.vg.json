{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "title": "Crashes",
    "data": {
      "url": "https://raw.githubusercontent.com/jtan0227/web-visualisation-assignment2/main/Week9/bubble_chart.csv"
    },
    "params": [
      {
        "name": "state_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Northern Territory",
            "Tasmania",
            "Western Australia",
            "South Australia",
            "Queensland",
            "Victoria",
            "New South Wales",
            "Australian Capital Territory"
          ],
          "labels": [
            "Show All",
            "Northern Territory",
            "Tasmania",
            "Western Australia",
            "South Australia",
            "Queensland",
            "Victoria",
            "New South Wales",
            "Australian Capital Territory"
          ],
          "name": "State Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "state_selection == null || datum.State ==state_selection"},
      {
        "calculate": "datum.Single/datum.Area * 10000",
        "as": "Single crashes per 10,000 Area"
      },
      {
        "calculate": "datum.Multiple/datum.Area * 10000",
        "as": "Multiple crashes per 10,000 Area"
      }
    ],
    "selection": {
      "state_highlight": {"type": "multi", "fields": ["State"], "bind": "legend"}
    },
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "Single",
        "type": "quantitative",
        "title": "Single Cases",
        "axis": {"tickCount": 10},
        "scale": {"type": "log", "domain": [100, 10000]}
      },
      "y": {
        "field": "Multiple",
        "type": "quantitative",
        "axis": {"tickCount": 15},
        "scale": {"type": "log", "domain": [100, 10000]}
      },
      "color": {
        "field": "State",
        "type": "nominal",
        "scale": {
          "domain": [
            "Australian Capital Territory",
            "Tasmania",
            "Western Australia",
            "South Australia",
            "Queensland",
            "Victoria",
            "New South Wales",
            "Northern Territory"
          ],
          "range": [
            "#ff7f00",
           "#808080",
           "#808080",
       "#808080",
       "#808080",
       "#241571",
       "#808080",
       "#808080"
          ]
        }
      },
      "opacity": {
        "condition": {"selection": "state_highlight", "value": 0.6},
        "value": 0.2
      },
      "size": {
        "field": "Area",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [5000, 500000, 1000000, 1500000, 3000000],
          "range": [60, 200, 300, 350, 450, 550]
        },
        "legend": {"format": ".1s"}
      },
      "tooltip": [
        {"field": "State", "type": "nominal"},
        {
          "field": "Single crashes per 10,000 Area",
          "type": "quantitative",
          "format": ".2f"
        },
        {
          "field": "Multiple crashes per 10,000 Area",
          "type": "quantitative",
          "format": ".2f"
        }
      ]
    }
  }