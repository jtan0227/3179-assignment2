{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/jtan0227/web-visualisation-assignment2/main/Week9/Casualties.csv"},
    
    "width":400,
    "params": [{
      "name": "grid",
      "select": "interval",
      "bind": "scales"
    }],
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "minor_injuries",
        "type": "quantitative",
        "title":"Minor injuries rate",
        "scale": {"type": "linear", "domain": [-5,50 ]}
      },
      "y": {
        "field": "serious_injuries",
        "type": "quantitative",
        "title":"Serious injuries rate",
        "scale": {"type": "linear", "domain": [-5, 30]}
      },
      "size": {"field": "serious_injuries", "title":"Serious injuries rate","type": "quantitative"},
      "tooltip": [
          {"field": "serious_injuries", "type": "quantitative","title":"Serious injuries rate"},
           {"field": "minor_injuries", "type": "quantitative","title":"Minor injuries rate"}]
    }
  }